@model List<Campaign>



<head>
    <link rel="stylesheet" href="~/css/CampaignCards.css" asp-append-version="true" />
</head>


<body class="bg-campaign">
    <h1 class="titulo m-4">Campaigns</h1>
    <main class="container">
        <div class="row justify-content-center">
            @foreach (Campaign campaign in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 mt-3 d-flex justify-content-center align-items-center hover-scale">
                    <div class="card text-white w-100 w-md-50 w-lg-25">
                        <img src="@campaign.CampaignMap" class="card-img-top" alt="map_img" width="auto" height="200px">
                        <div class="card-body">
                            <h2 class="card-title">@campaign.CampaignName</h2>
                            <p class="card-text my-1" style="min-height:200px; max-height: 200px; overflow-y: auto;">@campaign.CampaignDesc</p>
                            <div class="card-footer bg-transparent d-flex justify-content-around align-items-center selector" style="height: 100px;">

                                <div class="info selector rounded-1 modify">
                                    <form asp-controller="Campaign" asp-action="UpdateCampaignForm" method="get">
                                        <input type="hidden" name="campaignId" value="@campaign.CampaignId" />
                                        <button type="submit"><b>Edit</b></button>
                                    </form>
                                </div>
                                <div class="info selector roundet-1 go">
                                    <form asp-controller="Campaign" asp-action="RedirectToCampaign" method="get">
                                        <input type="hidden" name="campaignId" value="@campaign.CampaignId" />
                                        <button type="submit"><b>Go</b></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="floating-button">
                <a asp-controller="Campaign" asp-action="NewCampaignForm" type="button" class="btn btn-primary">NEW CAMPAIGN</a>
            </div>
        </div>
    </main>
</body>

