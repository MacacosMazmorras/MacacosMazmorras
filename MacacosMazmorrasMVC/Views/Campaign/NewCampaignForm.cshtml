@model Campaign

@{
    ViewData["Title"] = "Create campaign";
}

<div >
        <form asp-action="Campaign" asp-controller="Campaign" method="post" asp-antiforgery="true">
            <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group mb-2">
            <label asp-for="CampaignName" class="form-label">Name (*)</label>
            <input asp-for="CampaignName" class="form-control">
            <span asp-validation-for="CampaignName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CampaignDesc" class="form-label">Description</label>
            <textarea asp-for="CampaignDesc" class="form-control" rows="4"></textarea>
        </div>
        <div>
            <p>Para la imagen??</p>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}