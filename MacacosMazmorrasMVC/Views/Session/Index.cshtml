</head>

<body>
    <h1 class="titulo">@ViewBag.SelectedSession.SesionName</h1>
    <main class="container" style="display: flex">
        <section style="flex: 1">
            <article>
                @{
                    <div class="lista">
                        @foreach (SheetCustom character in Model)
                        {
                            <div class="next-turn-list-unit">
                                <div style="width: 113px; height: 113px;">
                                    <img class="next-turn-list-image" src="@character.ImgUrl" />
                                </div>
                            </div>
                        }
                    </div>
                }
            </article>
        </section>
        <section style="flex: 1">
            <article>

            </article>
        </section>
        <section style="flex: 1">

        </section>
    </main>
</body>

