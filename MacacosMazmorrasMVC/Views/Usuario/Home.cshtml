@model MacacosMazmorrasMVC.ViewModels.UserHomeViewModel

@{
    ViewData["Title"] = "Home";
}

<head>
    <link rel="stylesheet" href="~/css/CharacterCards.css" asp-append-version="true" />
</head>

<body class="bg-user-home">
    <h1 class="titulo">WELCOME, @Model.UserInfo.UsuarioName !</h1>
    <main class="container">
        <div class="row d-flex justify-content-center align-items-center">
            @foreach (SheetCustom sheetCustom in Model.SheetCustoms)
            {
                <div class="col-6 d-flex mt-5 justify-content-center align-items-center hover-scale">
                    <div class="card rounded-1">
                        <div class="card-image rounded-1">
                            <img class="card-image-portrait" src="@sheetCustom.ImgUrl" alt="Character Image">
                        </div>

                        <div class="card-body">
                            <h2>@sheetCustom.Name</h2>
                            <span class="classLevel">@sheetCustom.RaceType Lvl @sheetCustom.SheetCustomLevel</span>
                            <br />
                            <br />
                            <p>@sheetCustom.SheetCustomBackground</p>
                        </div>

                        <div class="info selector rounded-1">
                            <div class="col">
                                <div class="modify">
                                    <form asp-controller="SheetCustom" asp-action="UpdateCharacterForm" method="get">
                                        <input type="hidden" name="sheetCustomId" value="@sheetCustom.SheetCustomId" />
                                        <button type="submit"><b>EDIT</b></button>
                                    </form>
                                </div>
                                <div class="delete">
                                    <form asp-controller="SheetCustom" asp-action="DeleteSheetCustom" method="post" asp-antiforgery="true">
                                        <input type="hidden" name="confirmed" value="false" />
                                        <input type="hidden" name="sheetCustomId" value="@sheetCustom.SheetCustomId" />
                                        <button type="submit" onclick="return ConfirmDelete()"><b>DELETE</b></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <img class="card-frame" src="~/images/macaco/cardFrame_2.png" />
                </div>
            }
        </div>

        <div class="row d-flex justify-content-center align-items-center">
            @foreach (Sesion sesion in Model.Sessions)
            {
                <div class="col-6 d-flex mt-5 justify-content-center align-items-center hover-scale">
                    <div class="row d-flex justify-content-center align-items-center">
                        <div class="card-horizontal rounded-1">
                        <div class="col">
                            <div class="card-image-horizontal rounded-1">
                                @{
                                    string? sessionCampaignImage = "";
                                    foreach (Campaign campaign in Model.SessionCampaigns)
                                    {
                                        if (campaign.CampaignId == sesion.FKCampaignId)
                                        {
                                            sessionCampaignImage = campaign.CampaignMap;
                                        }
                                    }
                                
                                    // <img class="card-image-portrait" src="@sessionCampaignImage" alt="Character Image">
                                    <img class="card-image-portrait" src="https://i.ibb.co/frQkKbr/World.png" alt="Character Image">
                                }
                            </div>
                        </div>
                        <div class="col">
                            <div class="card-body-horizontal">
                                <h2>@sesion.SesionName</h2>
                                <p><span class="classLevel">@sesion.SesionDate hola</span></p>
                                <p>@sesion.SesionDesc</p>
                            </div>
                        </div>

                        <div class="info selector rounded-1">
                            <div class="col">
                                <div class="modify">
                                    <form asp-controller="Session" asp-action="UpdateSesionForm" method="get">
                                        <input type="hidden" name="sheetCustomId" value="@sesion.SesionId" />
                                        <button type="submit"><b>EDIT</b></button>
                                    </form>
                                </div>
                                <div class="delete">
                                    <form asp-controller="Session" asp-action="DeleteSesion" method="post" asp-antiforgery="true">
                                        <input type="hidden" name="confirmed" value="false" />
                                        <input type="hidden" name="sheetCustomId" value="@sesion.SesionId" />
                                        <button type="submit" onclick="return ConfirmDelete()"><b>DELETE</b></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                        
                        <img class="card-frame" src="~/images/macaco/cardFrame_2-horizontal.png" />
                    </div>
                </div>
            }
        </div>
    </main>
</body>

@section Scripts
    {
    <script>
        function ConfirmDelete() {
            var confirmed = confirm("Are you sure you want to delete this character?");
            document.getElementsByName('confirmed')[0].value = confirmed;
            return confirmed;
        }
                //await Html.RenderPartialAsync("_ValidationScriptsPartial");
    </script>
}

