@model Usuario

@{
    ViewData["Title"] = "Sign In";
}

<h1>Sign In</h1>

<form asp-action="signin" asp-controller="usuario" method="post" asp-antiforgery="true">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group mb-2">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Mail"></label>
        <input asp-for="Mail" class="form-control" />

    </div>

    <div class="form-group mb-2">
        <label asp-for="Contraseña"></label>
        <select asp-for="Contraseña" class="form-control"></select>
        <span asp-validation-for="Contraseña" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}