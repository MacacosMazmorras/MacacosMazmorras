@model Usuario
@inject Microsoft.AspNetCore.Mvc.IUrlHelper Url

@{
    ViewData["Title"] = "Sign In";
}

<body class="bg-login text-white">
    <div class="row">
        <div class="col-6">
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quo, numquam ab. Ratione non aspernatur iste fugiat, laboriosam voluptatibus ea inventore natus rem accusantium voluptatem at id, vero recusandae quisquam magni?</p>
        </div>
        <div class="col-6">

            <h1>Sign In</h1>

            <form id="signInValidation" asp-action="signin" asp-controller="usuario" method="post" asp-antiforgery="true">
@*                 <div asp-validation-summary="All" class="text-danger"></div> *@

                <div class="form-group mb-2">
                    <label asp-for="UsuarioName">Name (*)</label>
                    <input asp-for="UsuarioName" class="form-control" required />
@*                     <span asp-validation-for="UsuarioName" class="text-danger"></span> *@
                    <div id="errorName" class="invalid-feedback">
                        This field is required and must have, only letters,
                        and at least 3 characters
                    </div>

                </div>

                <div class="form-group mb-2">
                    <label asp-for="UsuarioMail">Mail (*)</label>
                    <input asp-for="UsuarioMail" type="email" class="form-control" required />
@*                     <span asp-validation-for="UsuarioMail" class="text-danger"></span> *@
                    <div id="errorEmail" class="invalid-feedback">
                        This field is required and must contain an email format. Exemple: eXample@example.com
                    </div>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="UsuarioPassword">Password (*)</label>
                    <input asp-for="UsuarioPassword" type="password" class="form-control" required />
@*                     <span asp-validation-for="UsuarioPassword" class="text-danger"></span> *@
                    <div id="errorPassword" class="invalid-feedback">
                        This field is required and between 3 to 8
                        characters, must have lowecase, uppercase and numbers
                    </div>
                </div>

                <div class="form-group mb-2">
                    <label for="UsuarioConfirmPassword">Confirm password (*)</label>
                    <input for="UsuarioConfirmPassword" type="password" class="form-control" />
                    @*<span asp-validation-for="UsuarioPassword" type="password" class="text-danger"></span>
                    *@
                    <div id="errorConfirmPassword" class="invalid-feedback">
                        This field is required and need to have the same "password"
                    </div>
                </div>

                <div>
                    <a asp-controller="usuario" asp-action="login">Have an account already? Log In</a>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div>
                    <div>
                        <p id="invalidMessage" class="text-center"></p>
                        <p id="validMessage" class="text-center"></p>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="~/js/signInValidations.js"></script>
</body>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
