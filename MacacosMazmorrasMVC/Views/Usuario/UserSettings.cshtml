@model Usuario

@{
    ViewData["Title"] = "Account settings";
}
<body class="bg-user-home">
    <h1 class="titulo">User info and settings</h1>
    <main class="container mt-5 mb-5" style="display: flex">
        <section style="flex: 1"></section>
        <section class="text-center" style="flex: 4">
            <article>
                <p>Name: @Model.UsuarioName</p>
            </article>
            <article>
                <p>Mail: @Model.UsuarioMail</p>
            </article>
        </section>
        <section style="flex: 1">
        </section>
    </main>
    <section style="display: flex">
        <article>
            <button asp-controller="Usuario" asp-action="Home" class="btn btn-secondary">Back</button>
        </article>
        <article>
            <form asp-action="DeleteUser" asp-controller="Usuario" method="post" asp-antiforgery="true">
                <input type="hidden" name="confirmed" value="false" />
                <input type="hidden" name="userId" value="@Model.UsuarioId" />
                <input type="submit" value="Delete account" onclick="document.getElementsByName('confirmed')[0].value = confirmDelete()" />
            </form>
        </article>
    </section>
</body>

@section scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete your account?");
        }
    </script>
}