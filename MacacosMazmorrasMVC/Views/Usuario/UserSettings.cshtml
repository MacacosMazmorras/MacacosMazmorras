@model Usuario

<h1 class="text-center">User info and settings</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="UserSettings" asp-controller="Usuario" method="post" asp-antiforgery="true">

            <div class="form-group mb-2">
                <label asp-for="UsuarioName" class="form-label"><b>Name</b></label>
                <label asp-for="UsuarioName" class="form-label">@Model.UsuarioName</label>
            </div>

            <div class="form-group mb-2">
                <label asp-for="UsuarioMail" class="form-label"><b>Mail</b></label>
                <label asp-for="UsuarioMail" class="form-label">@Model.UsuarioMail</label>
            </div>

            <div class="form-group mb-2">
                <b><label asp-for="UsuarioPassword" class="form-label">Password</label></b>
                <label asp-for="UsuarioPassword" class="form-label">@Model.UsuarioPassword</label>
            </div>

            <div>
                <input type="hidden" name="userId" value="@Model.UsuarioId" />
                <button type="submit" class="btn btn-primary">Nice!</button>
            </div>
        </form>

