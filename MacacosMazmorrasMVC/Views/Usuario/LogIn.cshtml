@model Usuario

@{
    ViewData["Title"] = "Log in";
}

<body class="bg-login text-white">
    <div class="row">
        <div class="col-6" >
            <h1>Log In</h1>
            <form asp-action="LogIn" asp-controller="usuario" method="post" asp-antiforgery="true">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-2">
                    <label asp-for="UsuarioMail">Mail</label>
                    <input asp-for="UsuarioMail" class="form-control" />

                </div>

                <div class="form-group mb-2">
                    <label asp-for="UsuarioPassword">Password</label>
                    <input asp-for="UsuarioPassword" type="password" class="form-control" />
                    <span asp-validation-for="UsuarioPassword" class="text-danger"></span>
                </div>
                <div>
                    <a asp-controller="usuario" asp-action="signin">Still don't have an account? Sign up now!</a>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <div class="col-6">
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quo, numquam ab. Ratione non aspernatur iste fugiat, laboriosam voluptatibus ea inventore natus rem accusantium voluptatem at id, vero recusandae quisquam magni?</p>
        </div>
    </div>

</body>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}