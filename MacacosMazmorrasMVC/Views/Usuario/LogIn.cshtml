@model Usuario

@{
    ViewData["Title"] = "Log in";
}

<body class="vh-100">
    <div class="row">
        <div class="col-6 d-flex flex-column align-items-center" >
            <h1>Log In</h1>
            <form asp-action="LogIn" asp-controller="usuario" method="post" asp-antiforgery="true">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-2">
                    <label asp-for="UsuarioMail">Mail</label>
                    <input asp-for="UsuarioMail" class="form-control" />

                </div>

                <div class="form-group mb-2">
                    <label asp-for="UsuarioPassword">Password</label>
                    <input asp-for="UsuarioPassword" type="password" class="form-control" />
                    <span asp-validation-for="UsuarioPassword" class="text-danger"></span>
                </div>
                <div>
                    <a asp-controller="usuario" asp-action="signin">Aún no tienes una cuenta? Registrate ya</a>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>
        </div>
        <div class="col-6">
            <p
        </div>
    </div>

</body>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}