@model SheetCustom

@{
    ViewData["Title"] = "Create character";
}

<body>
    <div class="container">
        <div class="row">
            <h1>Create new character</h1>
            <form asp-action="InsertSheet" asp-controller="SheetCustom" method="post" asp-antiforgery="true">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="d-md-flex">
                    <div class="col-md-3">
                        <table class="table">
                            <tr>
                                <th>Ability</th>
                                <th>Base Value</th>
                            </tr>

                            <tr>
                                <th><label asp-for="SheetCustomStr" class="form-label">Strength</label></th>
                                <th>
                                    <input asp-for="SheetCustomStr" class="form-control">
                                    <span asp-validation-for="SheetCustomStr" class="text-danger"></span>
                                </th>
                            </tr>

                            <tr>
                                <th><label asp-for="SheetCustomDex" class="form-label">Dexterity</label></th>
                                <th>
                                    <input asp-for="SheetCustomDex" class="form-control">
                                    <span asp-validation-for="SheetCustomDex" class="text-danger"></span>
                                </th>
                            </tr>

                            <tr>
                                <th><label asp-for="SheetCustomCon" class="form-label">Constitution</label></th>
                                <th>
                                    <input asp-for="SheetCustomCon" class="form-control">
                                    <span asp-validation-for="SheetCustomCon" class="text-danger"></span>
                                </th>
                            </tr>

                            <tr>
                                <th><label asp-for="SheetCustomInt" class="form-label">Intelligence</label></th>
                                <th>
                                    <input asp-for="SheetCustomInt" class="form-control">
                                    <span asp-validation-for="SheetCustomInt" class="text-danger"></span>
                                </th>
                            </tr>

                            <tr>
                                <th><label asp-for="SheetCustomWis" class="form-label">Wisdom</label></th>
                                <th>
                                    <input asp-for="SheetCustomWis" class="form-control">
                                    <span asp-validation-for="SheetCustomWis" class="text-danger"></span>
                                </th>
                            </tr>

                            <tr>
                                <th><label asp-for="SheetCustomCha" class="form-label">Charisma</label></th>
                                <th>
                                    <input asp-for="SheetCustomCha" class="form-control">
                                    <span asp-validation-for="SheetCustomCha" class="text-danger"></span>
                                </th>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-1 col-sm-0"></div>
                    <div class="col-md-4">
                        <div class="table">
                            <tr>
                                <b><label asp-for="SheetCustomName" class="form-label">Name</label></b>
                                <input asp-for="SheetCustomName" class="form-control">
                                <span asp-validation-for="SheetCustomName" class="text-danger"></span>
                                <br />
                            </tr>
                            <tr>
                                <b><label asp-for="SheetCustomRace" class="form-label">Race</label></b>
                                <textarea asp-for="SheetCustomRace" class="form-control" rows="4"></textarea>
                                <br />
                            </tr>
                            <tr>
                                <b><label asp-for="SheetCustomCA" class="form-label">CA</label></b>
                                <textarea asp-for="SheetCustomCA" class="form-control" rows="4"></textarea>
                                <br />
                            </tr>
                        </div>
                    </div>
                    <div class="col-md-1 col-sm-0"></div>
                    <div class="col-md-3">
                        <div class="table">
                            <tr>
                                <b><label asp-for="SheetCustomLevel" class="form-label">Level</label></b>
                                <input asp-for="SheetCustomLevel" class="form-control">
                                <span asp-validation-for="SheetCustomLevel" class="text-danger"></span>
                                <br />
                            </tr>
                            <tr>
                                <b><label asp-for="SheetCustomCR" class="form-label">CR</label></b>
                                <textarea asp-for="SheetCustomCR" class="form-control" rows="4"></textarea>
                                <br />
                            <tr>
                            <tr>
                                <b><label asp-for="SheetCustomPV" class="form-label">PV</label></b>
                                <textarea asp-for="SheetCustomPV" class="form-control" rows="4"></textarea>
                                <br />
                            </tr>
                        </div>     
                    </div>
                </div>

                <div class="form-group mb-2">
                    <b><label asp-for="FKTypeSheetId" class="form-label">Description</label></b>
                    <textarea asp-for="FKTypeSheetId" class="form-control" rows="4"></textarea>
                </div>

                <div>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}