@model SheetCustom

@{
    ViewData["Title"] = "Create character";
}

<body class="bg-campaign">
    <div class="container">
        <div class="row text-white">
            <h1>Create new character</h1>
            <hr>
            <form asp-action="NewCharacterForm" asp-controller="SheetCustom" method="post" asp-antiforgery="true" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="d-md-flex">
                    <div class="col-md-3">
                        <table class="table text-white">
                            <tr>
                                <th>Ability</th>
                                <th>Base Value</th>
                            </tr>
                            <tr>
                                <th><label asp-for="Str" class="form-label">Strength</label></th>
                                <th>
                                    <input asp-for="Str" placeholder="10" class="form-control">
                                    <span asp-validation-for="Str"  class="text-danger"></span>
                                </th>
                            </tr>

                            <tr>
                                <th><label asp-for="Dex" class="form-label">Dexterity</label></th>
                                <th>
                                    <input asp-for="Dex" placeholder="10" class="form-control">
                                    <span asp-validation-for="Dex" class="text-danger"></span>
                                </th>
                            </tr>

                            <tr>
                                <th><label asp-for="Con" class="form-label">Constitution</label></th>
                                <th>
                                    <input asp-for="Con" placeholder="10" class="form-control">
                                    <span asp-validation-for="Con" class="text-danger"></span>
                                </th>
                            </tr>

                            <tr>
                                <th><label asp-for="Inte" class="form-label">Intelligence</label></th>
                                <th>
                                    <input asp-for="Inte" placeholder="10" class="form-control">
                                    <span asp-validation-for="Inte" class="text-danger"></span>
                                </th>
                            </tr>

                            <tr>
                                <th><label asp-for="Wis" class="form-label">Wisdom</label></th>
                                <th>
                                    <input asp-for="Wis" placeholder="10" class="form-control">
                                    <span asp-validation-for="Wis" class="text-danger"></span>
                                </th>
                            </tr>

                            <tr>
                                <th><label asp-for="Cha" class="form-label">Charisma</label></th>
                                <th>
                                    <input asp-for="Cha" placeholder="10" class="form-control">
                                    <span asp-validation-for="Cha" class="text-danger"></span>
                                </th>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-1 col-sm-0"></div>
                    <div class="col-md-4">
                        <div class="table text-white">
                            <tr>
                                <b><label asp-for="Name" class="form-label">Name</label></b>
                                <input asp-for="Name" placeholder="Goblin" class="form-control">
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <br />
                            </tr>
                            <tr>
                                <b><label asp-for="RaceType" class="form-label">Class</label></b>
                                <input asp-for="RaceType" placeholder="Druid" class="form-control">
                                <span asp-validation-for="RaceType" class="text-danger"></span>
                                <br />
                            </tr>
                            <tr>
                                <b><label asp-for="Ac" class="form-label">AC</label></b>
                                <input asp-for="Ac" type="number" placeholder="10" class="form-control">
                                <span asp-validation-for="Ac" class="text-danger"></span>
                                <br />
                            </tr>
                        </div>
                    </div>
                    <div class="col-md-1 col-sm-0"></div>
                    <div class="col-md-3">
                        <div class="table text-white">
                            <tr>
                                <b><label asp-for="SheetCustomLevel" class="form-label">Level</label></b>
                                <input asp-for="SheetCustomLevel" placeholder="10" class="form-control">
                                <span asp-validation-for="SheetCustomLevel" class="text-danger"></span>
                                <br />
                            </tr>
                            <tr>
                                <b><label asp-for="SheetCustomCR" class="form-label">CR</label></b>
                                <input asp-for="SheetCustomCR" placeholder="10" class="form-control">
                                <span asp-validation-for="SheetCustomCR" class="text-danger"></span>
                                <br />
                            <tr>
                            <tr>
                                <b><label asp-for="Hp" class="form-label">VT</label></b>
                                <input asp-for="Hp" placeholder="50" class="form-control">
                                <span asp-validation-for="Hp" class="text-danger"></span>
                                <br />
                            </tr>
                        </div>
                    </div>
                </div>

                <div class="d-md-flex">
                    <div class="col-md-5">
                        <b><label asp-for="ImgUrl" class="form-label">Avatar image URL</label></b>
                        <input asp-for="ImgUrl" type="file" name="ImgUrl" class="form-control">
                    </div>
                    <div class="col-md-1 col-sm-0"></div>
                    <div class="col-md-2">
                        <b><label asp-for="FKCampaignId" class="form-label">Campaign</label></b>
                        <select asp-for="FKCampaignId" asp-items="@ViewBag.Campaigns" class="form-control" rows="4"></select>
                    </div>
                    <div class="col-md-1 col-sm-0"></div>
                    <div class="col-md-3">
                        <b><label asp-for="FKTypeSheetId" class="form-label">Character type</label></b>
                        <select asp-for="FKTypeSheetId" asp-items="@ViewBag.Types" class="form-control" rows="4"></select>
                    </div>
                </div>

                <br />

                <div class="d-md-flex">
                    <div class="col-md-12">
                        <b><label asp-for="SheetCustomBackground" class="form-label">Background</label></b>
                        <textarea asp-for="SheetCustomBackground" placeholder="Write some description..." class="form-control" rows="4"></textarea>
                    </div>
                </div>
            </form>
            <div class="d-flex justify-content-center flex-column flex-md-row align-items-center">
                <div class="me-1">
                    <button type="submit" class="greenButton-normal">Create</button>
                </div>
                <div class="ms-1">
                    <a asp-controller="SheetCustom" asp-action="Index">
                        <button class="redButton-normal">Calcel</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}