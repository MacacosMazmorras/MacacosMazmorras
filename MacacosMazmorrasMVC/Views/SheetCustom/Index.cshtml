@model List<SheetCustom>

<h1 class="text-center">Characters</h1>

<div>
    <table class="table text-center">
        <thead>
            <tr class="text-center">
                <th class="align-middle" scope="col">Avatar</th>
                <th class="align-middle" scope="col">Name</th>
                <th class="align-middle" scope="col">More info</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SheetCustom sheetCustom in Model)
            {
                <tr>
                    <td><img src="@sheetCustom.SheetCustomImageUrl" alt="MonsterImg" height="100" width="100"></td>
                    <td class="align-middle">@sheetCustom.SheetCustomName</td>
                    <td class="align-middle"><button type="button">more info</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>